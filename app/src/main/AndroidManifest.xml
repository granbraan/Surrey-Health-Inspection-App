<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poject_01">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="List of Restaurants"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Poject_01"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name=".UI.InspectionDetailsActivity"
            android:label="Inspection Details"
            android:parentActivityName=".UI.RestaurantDetailsActivity"/>
        <activity
            android:name=".UI.RestaurantDetailsActivity"
            android:label="Restaurant Details"
            android:parentActivityName=".UI.MainActivity"
            />
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>